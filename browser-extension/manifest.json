{
  "name": "Magic Mockup: One-click screenshot capture and design mockups",
  "version": "1.1",
  "description": "Create beautiful browser and mobile mockups in one-click.",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "button.png",
    "default_title": "Capture a screenshot"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [],
  "manifest_version": 3,
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  }
}
